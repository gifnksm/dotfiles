#!/bin/bash
# shellcheck source-path=SCRIPTDIR/..

set -eu -o pipefail

cd "$(dirname "${BASH_SOURCE[0]}")/.."
source test/lib/test_common.bash
is_executed && return

find \
    . \
    \( -not -path '*/.*' \) -and \( \( -executable -type f \) -or \( -name '*.bash' \) \) \
    -print \
    -exec shellcheck {} +
