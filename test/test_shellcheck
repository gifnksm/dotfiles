#!/bin/bash
# shellcheck source-path=SCRIPTDIR/..

set -eu -o pipefail

cd "$(dirname "${BASH_SOURCE[0]}")/.."
source test/lib/test_common.bash
is_executed && return

group_start_file
{
    find \
        . \
        \( -not -path './vendor/*' \) -and \
        \( -not -path '*/.*' \) -and \
        \( \( -executable -type f \) -or \( -name '*.bash' \) \) \
        -print \
        -exec docker run --memory 2G --rm -v "$(pwd):/mnt" koalaman/shellcheck:stable {} +
}
